{
    "manifest_version":2,
    "name": "WaterReminder",
    "description":"A bot that reminds you to take a sip of water",
    "version": "1.0",
    "icons":{
        "16":"/Icons/16.png",
        "48":"/Icons/48.png",
        "128":"/Icons/128.png"
    },
    "page_action":{
        "default_icon":{
            "16":"/Icons/16.png",
            "48":"/Icons/48.png",
            "128":"/Icons/128.png"
        }
    },
    "content_scripts":[
        {
            "matches":["http://*/*", "https://*/*"],
            "css":["main.css"],
            "js":["main.js"]
        }
    ],
    "permissions": [
        "storage"
    ]
}